FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     electroMicroTransport;

startFrom       latestTime;

startTime       0;

stopAt          endTime;//writeNow;//

endTime         90.;

deltaT          1e-9;

writeControl    adjustableRunTime;

writeInterval   10.;

purgeWrite      0;

writeFormat     ascii;

writePrecision  9; 

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;//no;

maxCo           0.45;
